<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="itchaos.bootstrap_checkbox_type.class">ITChaos\Bundle\BootstrapCheckboxBundle\Form\BootstrapCheckboxType</parameter>
    </parameters>

    <services>
        <service id="itchaos.form.bootstrap_checkbox" class="%itchaos.bootstrap_checkbox_type.class%">
            <tag name="form.type" alias="bootstrap_checkbox"/>
        </service>
    </services>
</container>