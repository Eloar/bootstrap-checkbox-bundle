{% block bootstrap_checkbox_row %}
    {% spaceless %}
        <div class="form-group{% if form.vars.errors|length > 0 %} has-error{% endif %}">
            {% if left %}
                {{ block('bootstrap_checkbox_left_row') }}
            {% else %}
                {{ block('bootstrap_checkbox_right_row') }}
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock %}

{% block bootstrap_checkbox_left_row %}
    {% spaceless %}
        {{ form_widget(form) }}
        {{ form_label(form) }}
        {{ form_errors(form) }}
    {% endspaceless %}
{% endblock %}

{% block bootstrap_checkbox_right_row %}
    {% spaceless %}
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    {% endspaceless %}
{% endblock %}

{% block bootstrap_checkbox_widget %}
    {% spaceless %}
        <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
    {% endspaceless %}
{% endblock %}